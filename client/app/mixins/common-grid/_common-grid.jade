mixin commondGrid(items)
  section.two-grid
    .container-fluid
      each item, index in items
        - var imgSrc = "/assets/images/banners/" + (index + 1) + ".jpg";
        .row.two-grid__row(style="background: #{item.color}")
          .two-grid__cell.two-grid__cell--text.col-xs-12.col-sm-6.col-md-6.col-lg-6.no-gutter
            if item.header
              h3.two-grid__cell-header=header
            p.two-grid__cell-body
              h1.two-grid__cell-body__title=item.title
              a.two-grid__cell-body__link(href="#") View Bags
          .two-grid__cell.two-grid__cell--image.two-grid__cell--image-right.col-xs-12.col-sm-6.col-md-6.col-lg-6.no-gutter
            img(alt="")&attributes({src: imgSrc})
