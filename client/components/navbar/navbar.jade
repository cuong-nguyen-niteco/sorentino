.nav-bar__first-line
  .nav-bar__first-line__logo
    h2.nav-bar__first-line__logo__name Sorentino
    .nav-bar__first-line__logo__menu.nav-bar__first-line__logo__menu--left
      ul
        li(ng-repeat="item in nav.menu.left track by $index")
          a(href="{{item.link}}")
            span {{item.name}}
          .nav-bar__sub(ng-class="{'nav-bar__sub--show': item.items && item.items.length > 0}")
            ul(ng-if="item.items && item.items.length > 0")
              li(ng-repeat="subItem in item.items track by $index")
                a(href="/collection/{{subItem.id}}")
                  span {{subItem.name}}
    .nav-bar__first-line__logo__menu.nav-bar__first-line__logo__menu--right
      ul
        li(ng-repeat="item in nav.menu.right track by $index")
          a(href="{{item.link}}")
            span {{item.name}}
          .nav-bar__sub(ng-class="{'nav-bar__sub--show': item.items && item.items.length > 0}")
            ul(ng-if="item.items && item.items.length > 0")
              li(ng-repeat="subItem in item.items track by $index")
                a(href="/collection/{{subItem.id}}")
                  span {{subItem.name}}
  h2.nav-bar__first-line__right-logo Sorentino
.nav-bar__second-line
  ul
    li(ng-repeat="item in nav.menu.left.concat(nav.menu.right) track by $index")
      a(href="{{item.link}}")
        span(ng-class="{'nav-bar--active': isActive(item.name)}") {{item.name}}
      .nav-bar__sub(ng-class="{'nav-bar__sub--show': item.items && item.items.length > 0}")
        ul(ng-if="item.items && item.items.length > 0")
          li(ng-repeat="subItem in item.items track by $index")
            a(href="/collection/{{subItem.id}}")
              span {{subItem.name}}
